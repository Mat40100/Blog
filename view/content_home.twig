                    <div class="col-12 col-md-8 mx-auto">
                        <input type="email" name="email" class="form-control text-center" id="validationCustom03" placeholder="E-mail" required>
                        <div class="invalid-feedback">
                            Donnez un mail valide.
                        </div>
                    </div>
                    <div class=" col-12 my-2">
                        <textarea rows="6" type="text" name="message" class="form-control text-center" id="validationCustom04" placeholder="Message" required></textarea>
