{% extends 'layout.twig' %}

{% block content %}
    <div class="container-fluid p-0">
    {% block alert %}{% endblock %}
    <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
        <div class="my-auto">
            <h1 class="mb-0">{{infos.last_name}}
                <span class="text-primary">{{infos.first_name}}</span>
            </h1>
            <div class="subheading mb-5">{{infos.adress}}
                <a href="mailto:{{infos.email}}">{{infos.email}}</a>
            </div>
            <p class="mb-5">{{infos.chapo}}</p>
            <ul class="list-inline list-social-icons mb-0">
                <li class="list-inline-item">
                    <a href="?p=dl&pdf=public/CV.pdf">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-file-pdf-o fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="{{infos.linkedin}}">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="{{infos.github}}">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="https://insight.sensiolabs.com/projects/49c54cd5-5f0a-40ac-9dfc-dee9ca605886"><img src="https://insight.sensiolabs.com/projects/49c54cd5-5f0a-40ac-9dfc-dee9ca605886/small.png"></a>
                </li>
            </ul>
        </div>
    </section>

    <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="cv">
        <div class="my-auto">
            <h2 class="mb-5">Education</h2>

            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h3 class="mb-0">Centre Instruction des contrôleur de défense aérienne</h3>
                    <div class="subheading mb-3">Brevet européen de contrôle aérien</div>
                    <div>Contrôleur aérien, base de Dax</div>

                </div>
                <div class="resume-date text-md-right">
                    <span class="text-primary">Octobre 2013 - Aujourd'hui</span>
                </div>
            </div>

            <div class="resume-item d-flex flex-column flex-md-row">
                <div class="resume-content mr-auto">
                    <h3 class="mb-0">Jules Richard</h3>
                    <div class="subheading mb-3">BTS conception et industrialisation en micro-technique</div>
                </div>
                <div class="resume-date text-md-right">
                    <span class="text-primary">Septembre 2010- Juin 2012</span>
                </div>
            </div>

        </div>
    </section>

    <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="contact">
        <div class="row  my-auto">
            <h2 class="col-12 mb-5 text-left">Me contacter</h2>
            <form class="col-12 col-md-4 needs-validation d-flex flex-column mx-auto " method="post" action="index.php?p=mail" novalidate>
                <div class="my-2 mx-auto row">
                    <div class="col-12 col-md-6">
                        <input type="text" name="last_name" class="form-control text-center" id="validationCustom01" placeholder="Nom" required>
                        <div class="valid-feedback">
                            :)
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <input type="text" name="first_name" class="form-control text-center" id="validationCustom02" placeholder="Prénom" required>
                        <div class="valid-feedback">
                            :)
                        </div>
                    </div>
                </div>
                <div class="form-col row">
                    <div class="col-12 col-md-8 mx-auto">
                        <input type="email" name="email" class="form-control text-center" id="validationCustom03" placeholder="E-mail" required>
                        <div class="invalid-feedback">
                            Donnez un mail valide.
                        </div>
                    </div>
                    <div class=" col-12 my-2">
                        <textarea rows="6" type="text" name="message" class="form-control text-center" id="validationCustom04" placeholder="Message" required></textarea>
                        <div class="invalid-feedback">
                            Ne laissez pas le message vide.
                        </div>
                    </div>
                </div>
                <div class="mx-auto mb-2 g-recaptcha" data-sitekey="6LdO11EUAAAAAA8YQr65mdAynCYpEyCit1TI21Jk"></div>
                <button class="btn btn-primary" type="submit">Envoyer</button>
            </form>
        </div>
    </section>
                        
    {% if session.Userlvl is defined %}
    {% else %}
        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="login">
            <div class="row  my-auto">
                <h2 class="col-12 mb-5 text-left">Se logguer</h2>
                <form class="col-12 col-md-6 needs-validation d-flex flex-column mx-auto form-col" method="post" action="index.php?p=home&d=connect" novalidate>
                    <div class="form-col my-2 mx-auto">
                        <div class="col-12 my-2">
                            <input type="email" name="email" class="form-control text-center" id="validationCustom05" placeholder="Email" required>
                            <div class="valid-feedback">
                                :)
                            </div><div class="invalid-feedback">
                                Donnez un email valide.
                            </div>
                        </div> 
                        <div class="col-12 my-2">
                            <input type="password" name="pwd" class="form-control text-center" id="validationCustom06" placeholder="Mot de passe" required>
                            <div class="invalid-feedback">
                                Entrez un mot de passe.
                            </div>
                        </div>                        
                    </div> 
                    <button class="col-4 btn btn-primary mx-auto " type="submit">Envoyer</button>
                </form>
            </div>
        </section>
    {% endif %}
</div>
{% endblock %}

