{% extends 'admin_layout.twig' %}

{% block content %}
    <div class="container-fluid p-0">
        {#{% if session.Userlvl < 2 %}
            <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
                // block admin suprem
            </section>
        {% endif %}#}

        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
            <div class="container">
                <form method="post" action="?p=valid_comment">
                    {% for unvalid_comment in unvalid_comments %}
                        <div class="row border border-gray my-3">
                            <div class="col-2">{{unvalid_comment.last_mod}}</div>
                            <div class="col-1">{{unvalid_comment.last_name}}</div>
                            <div class="col-1">{{unvalid_comment.first_name}}</div>
                            <div class="col-4">Titre de l'article : {{unvalid_comment.title}}</div>
                            <div class="col-3">Valider : <input type="checkbox" name="{{unvalid_comment.comment_id}}"></div>
                            <div class="col-12 border border-#{303E4B}">{{unvalid_comment.comment}}</div>
                        </div>
                    {%endfor%}
                    <input type="submit" value="valider">
                </form>
            </div>
        </section>
    </div>
{% endblock %}